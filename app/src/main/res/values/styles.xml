<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Base.Theme.DesignDemo"></style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--状态栏的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <!--<item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="MyActionButtonStyle" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:minWidth">45dip</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="ActionBarTitle" parent="android:Widget.TextView">
        <!-- The action bar title font -->
        <item name="android:fontFamily">sans-serif-light</item>
        <!-- Customizes the color of the action bar title-->
        <item name="android:textColor">@android:color/white</item>
        <!-- Customizes the size of the action bar title-->
        <item name="android:textSize">15sp</item>
    </style>


    <style name="ThemeOverlay.YourApp" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/theme_color_secondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!-- Styles -->
    <style name="OverFlow" parent="@android:style/Widget.DeviceDefault.ActionButton.Overflow">
        <item name="android:src">@mipmap/abc_ic_menu_more_overflow_mtrl_alpha</item>
    </style>
</resources>
